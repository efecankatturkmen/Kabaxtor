@model Kabaxtor.Models.ShippingInformation
@{
    ViewBag.Title = "EditShipping";
    Layout = "~/Views/Shared/Admin_Layout .cshtml";
}

<body class="template-contactform-complete template-contactform-success">
    <div class="content-wrap">

        <div class="container clearfix">
            @*<div class="form-widget">*@
            <div class="form-result"></div>

            <div class="form-process"></div>

            @using (Html.BeginForm("EditShipping", "Admin", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                //for (int i = 0; i < Model.Rows.Count; i++)
                //{
                <div class="row">
                    <div class="col-md-12 form-group">

                        <label for="template-contactform-name"> Urun Adi:  @Html.DisplayFor(model => model.ShippingCompany)<small>*</small></label>

                    </div>
                    <div class="col-md-6 form-group">
                        <label for="template-contactform-name">Kargo Fiyati<small>*</small></label>

                        @*<input type="text" id="template-contactform-name" name="template-contactform-name" value="" class="form-control required" />*@
                        @Html.EditorFor(model => model.ShippingCost, new { htmlAttributes = new { @class = "form-control required", required = "required" } })
                        @Html.ValidationMessageFor(model => model.ShippingCost, "", new { @class = "text-danger" })
                    </div>



                    <div class="col-md-6 form-group">
                        <label for="template-contactform-name">Telefon Numarasi <small>*</small></label>

                        @*<input type="text" id="template-contactform-name" name="template-contactform-name" value="" class="form-control required" />*@
                        @Html.EditorFor(model => model.CompanyTelephoneNumber, new { htmlAttributes = new { @class = "form-control required", required = "required" } })
                        @Html.ValidationMessageFor(model => model.CompanyTelephoneNumber, "", new { @class = "text-danger" })
                    </div>



                    @*<div class="col-12 hidden">
                            <input type="text" id="template-contactform-botcheck" name="template-contactform-botcheck" value="" class="form-control" />
                        </div>*@

                    <div class="col-12">
                        <button type="submit" class="button button-3d nomargin">Ekle</button>
                        @*<input type="submit" value="Create" class="btn btn-default" />*@
                    </div>

                    <!-- Form Settings -->
                    @*<input type="hidden" name="prefix" value="template-contactform-">
                        <input type="hidden" name="subject" value="Message from Contact Form">*@
                </div>
                @*}*@

            }

            @*</div>*@
        </div>
    </div>
</body>

